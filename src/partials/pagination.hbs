<nav class="pagination" role="navigation">
  {{#if prev}}
    <a class="btn newer-posts" href="{{page_url prev}}">&larr; Newer Posts</a>
  {{/if}}
  <span class="page-number">Page {{page}} of {{pages}}</span>
  {{#if next}}
    <a class="btn older-posts" href="{{page_url next}}">Older Posts &rarr;</a>
  {{/if}}
</nav>