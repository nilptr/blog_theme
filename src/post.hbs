{{!< default}}

{{#post}}
<header>
  <!-- todo: back -->
  {{> post/meta}}
  <h1 class="post-title">{{title}}</h1>
</header>
<section class="post-body">
  {{content}}
</section>
<hr class="divider">
<div class="posts-related">
  {{#prev_post}}
    <a class="btn" href="{{url}}" title="{{title}}">&larr; {{title}}</a>
  {{/prev_post}}

  {{#next_post}}
    <a class="btn" href="{{url}}" title="{{title}}">{{title}} &rarr;</a>
  {{/next_post}}
</div>
<hr class="divider">
{{/post}}